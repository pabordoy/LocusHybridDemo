<MudStack>
    <MudPaper Class="d-flex align-center justify-start mud-width-full pa-4">
        <MudIcon Icon="@Icon" Color="Color.Primary" Style="font-size:60"></MudIcon>
        <MudStack Class="d-flex align-start justify-start mud-width-full mx-5" Spacing="0">
            <MudText Typo="Typo.subtitle1" Color="Color.Primary" Style="font-weight:500">@Title</MudText>
            <MudText Typo="Typo.h4" Color="Color.Primary">@Value</MudText>
        </MudStack>
    </MudPaper>
</MudStack>

@code {
    [Parameter] public string Icon { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string Value { get; set; }
}